{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Edge against localhost",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug BackNode Chrome:HTTP",
            "url": "http://localhost:6969/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Map BackNode Chrome:HTTP",
            "url": "http://localhost:6969/",
            "webRoot": "${workspaceFolder}/dist/",
            "sourceMapPathOverrides": {
                "webpack:///./~/*": "${webRoot}/../../node_modules/*",
                "webpack:///*": "${webRoot}/*",
                "webpack:///./dist/*": "${webRoot}/lib/*"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug cloud-explo Chrome:HTTP",
            "url": "http://localhost:6969/lib/cloud-explorer/app/demo.html",
            "webRoot": "${workspaceFolder}"
        },
    ]
}